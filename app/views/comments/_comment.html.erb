<div id="<%= dom_id comment %>">
  <p>
    <strong>Name:</strong>
    <%= comment.name %>
  </p>

  <p>
    <strong>Message:</strong>
    <%= comment.message %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

  <%= link_to "Excluir", [comment], data: { turbo_method: :delete, turbo_confirm: "tem certeza ?"} %>

</div>
